#!/bin/bash -e

# Stop the script if any command fails
set -e -u -o pipefail
BASE_DIR=$(dirname $0)
source $BASE_DIR/constants.sh

TEST_DIR=/opt/seagate/$PRODUCT/sspl/sspl_test

if rpm -qa | grep -q sspl-test ;
then
    $TEST_DIR/run_tests.sh test $*
    exit $?
else
    echo "Please install sspl-test RPM"
    exit 1
fi
